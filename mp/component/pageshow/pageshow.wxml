<!-- loading -->
<block wx:if="{{show=='loading'}}">
  <view class="loading fl_l_c">
    <view class="fl_c" style="position:relative;margin-bottom:30rpx;">
      <view class="run"></view>
      <image src="/images/pub/logo-loading.png"></image>
    </view>
    <view class="fs30">拼命加载中...</view>
  </view>
</block>
<!-- 无内容 -->
<block wx:elif="{{show=='nothing'}}">
  <view class="fl_l_c" style="width:100%;height:600rpx;">
    <image src="/images/pub/nothing.png" style="width:292rpx;height:300rpx;margin-bottom:30rpx;"></image>
    <view class="fs30 co_9">暂无内容哦~</view>
  </view>
</block>
<!-- 请求失败 -->
<block wx:elif="{{show=='fail'}}">
  <view class="fl_l_c" style="width:100%;height:600rpx;">
    <image src="/images/pub/nothing.png" style="width:292rpx;height:300rpx;margin-bottom:30rpx;"></image>
    <view class="fs30 co_9" style="margin-bottom:10rpx;">服务器开小差了，请稍后再试</view>
    <view bindtap="reload" class="btn" style="width:300rpx;margin-top:30rpx;">点击刷新</view>
  </view>
</block>
<!-- 网络超时 -->
<block wx:elif="{{show=='timeout'}}">
  <view class="fl_l_c" style="width:100%;height:600rpx;">
    <image src="/images/pub/nothing.png" style="width:292rpx;height:300rpx;margin-bottom:30rpx;"></image>
    <view class="fs30 co_9" style="margin-bottom:10rpx;">当前网络繁忙，请稍后重试</view>
    <view bindtap="reload" class="btn" style="width:300rpx;margin-top:30rpx;">点击刷新</view>
  </view>
</block>
<!-- 无网络 -->
<block wx:elif="{{show=='networkout'}}">
  <view class="fl_l_c" style="width:100%;height:600rpx;">
    <image src="/images/pub/nothing.png" style="width:292rpx;height:300rpx;margin-bottom:30rpx;"></image>
    <view class="fs30 co_9" style="margin-bottom:10rpx;">网络无连接，请检查网络设置</view>
    <view bindtap="reload" class="btn" style="width:300rpx;margin-top:30rpx;">点击刷新</view>
  </view>
</block>