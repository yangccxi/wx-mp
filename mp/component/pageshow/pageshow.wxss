@import "../../app.wxss";

.loading {
  width: 100%;
  height: 600rpx;
}

.loading image {
  width: 70rpx;
  height: 70rpx;
	position: absolute;
	left: 50%;
	margin-left: -35rpx;
	top: 50%;
	margin-top: -30rpx;
}

.run {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  border: 4rpx solid transparent;
  border-top-color: #27c554;
  animation: spin 1.5s linear infinite;
}

.run:before {
  content: "";
  position: absolute;
  z-index: 3;
  top: 5rpx;
  left: 5rpx;
  right: 5rpx;
  bottom: 5rpx;
  border-radius: 50%;
  border: 4rpx solid transparent;
  border-top-color: #2fd996;
  animation: spin 2s linear infinite;
}

.run:after {
  content: "";
  position: absolute;
  z-index: 3;
  top: 15rpx;
  left: 15rpx;
  right: 15rpx;
  bottom: 15rpx;
  border-radius: 50%;
  border: 4rpx solid transparent;
  border-top-color: #f8d803;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% {
    transform: rotate(0deg);
  }

  100% {
    transform: rotate(360deg);
  }
}
