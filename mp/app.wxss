/* 按钮 */

.btn {
  color: #fff;
  font-weight: bold;
  width: 660rpx;
  height: 88rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #ef2b2b;
  border-radius: 44rpx;
  margin-left: auto;
  margin-right: auto;
}

.btn_bot {
  width: 100%;
  position: fixed;
  left: 0;
  bottom: 0;
  border-radius: 0;
}

.btn_f {
  color: #ef2b2b;
