/* 重置 */

view, text, label, input, textarea, button, picker {
  word-break: break-all;
  font-family: 'Microsoft YaHei';
  font-size: 30rpx;
  color: #333;
  box-sizing: border-box;
}

image {
  display: block;
}

input {
  width: 250rpx;
  height: 96rpx;
  padding: 0;
  background-color: transparent;
}

button {
  padding: 0;
  border-radius: 0;
  background-color: #fff;
  border: 0;
  margin: 0;
}

button::after {
  border: 0;
}

textarea {
  letter-spacing: 1rpx;
  line-height: 1.6;
  text-align: justify;
  word-break: break-all;
}

/* 段落 */

.ph {
  letter-spacing: 1px;
  line-height: 1.6;
  text-align: justify;
  word-break: break-all;
}

/* 分割线 */

.br_bot {
  background-size: 100% 1px;
  background-position: bottom;
  background-repeat: no-repeat;
  background-image: linear-gradient(0deg, #d9d9d9, #d9d9d9 50%, transparent 50%);
}

.br_top {
  background-size: 100% 1px;
  background-position: top;
  background-repeat: no-repeat;
  background-image: linear-gradient(0deg, #d9d9d9, #d9d9d9 50%, transparent 50%);
}

/* 省略号 */

.el_one {
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.el_two {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.el_three {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
}

.p_r {
  position: relative;
}

